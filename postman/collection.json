    {
      "name": "Likes",
      "item": [
        {
          "name": "Create Like",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"targetType\": \"pin\",\n  \"targetId\": \"<pinOrCommentId>\",\n  \"type\": \"upvote\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/likes",
              "host": ["{{base_url}}"],
              "path": ["likes"]
            }
          }
        },
        {
          "name": "List Likes",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/likes/:targetType/:targetId",
              "host": ["{{base_url}}"],
              "path": ["likes",":targetType",":targetId"]
