              "raw": "{\n  \"title\": \"My Pin\",\n  \"description\": \"...\",\n  \"latitude\": 24.7,\n  \"longitude\": 46.7,\n  \"privacy\": \"public\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/pins",
