    {
      "name": "Likes",
      "item": [
        {
          "name": "Create Like",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"targetType\": \"pin\",\n  \"targetId\": \"<pinOrCommentId>\",\n  \"type\": \"like\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/likes",
