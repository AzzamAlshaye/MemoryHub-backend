          }
        },
        {
          "name": "Delete Self",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Pins",
